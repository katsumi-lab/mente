<%= render "shared/header" %>

<div class="container col-8">
  <h1>編集画面</h1>

  <div class="nav justify-content-end">
    <%= link_to '一覧に戻る', tasks_path, class:'nav-link' %>
  </div>
  <%= form_with model:@task, url: task_path, local: true do |f| %>
    <div class="form-group">
      <td>
      <%=f.label :floor_id, '場所'%>
      <%= f.collection_select(:floor_id, FloorCategory.all, :name, :name,{selected: @task.floor_id}, {class:"form-control", id: "floor_category"}) %>
      </td>
    </div>

    <div class="form-group">
      <td>
      <%=f.label :room_id, '部屋'%>
      <%= f.collection_select(:room_id, RoomCategory.all, :name, :name,{selected: @task.room_id}, {class:"form-control", id: "room_category"}) %>
      </td>
    </div>

    <div class="form-group">
      <td>
      <%=f.label :item_id, '項目'%>
      <%= f.collection_select(:item_id, ItemCategory.all, :name, :name,{selected: @task.item_id}, {class:"form-control", id: "item_category"}) %>
      </td>
    </div>

    <div class="form-group">
      <td>
      <%=f.label :mentenance_id, 'お手入れ'%>
      <%= f.collection_select(:mentenance_id, MentenanceCategory.all, :name, :id,{selected: @task.mentenance_id}, {class:"form-control",id: "mentenance_category"}) %>
      </td>
    </div>

    <div class="form-group">
      <%= f.label :deadline,  '目安の時期' %>
      <%= f.date_field :deadline, class:"form-control ", id:"date" %>
    </div>

    <div class="d-flex justify-content-between">
      <div><%= link_to "戻る", :back ,class:"btn btn-outline-secondary"%></div>
      <div><input type = "reset" value="clear" class="btn btn-outline-secondary"></div>
    </div>
    <br>
    <br>
    <div class="d-flex justify-content-between">
      <%= f.submit nil, class: 'btn btn-primary btn-lg btn-block'%>
    </div>


  <% end %>

  </div>

<%= render "shared/footer" %>