<%= render "shared/header" %>

<div class="container">
  <div class="jumbotron">
    <h2 class="d-flex justify-content-center">ユーザー情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name, class:"input-name form-control", id:"last-name" %>
      <%= f.text_field :first_name, class:"input-name form-control", id:"first-name" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :last_name_kana, class:"input-name form-control", id:"last-name-kana" %>
      <%= f.text_field :first_name_kana, class:"input-name form-control", id:"first-name-kana"%>
    </div>
  </div>
  
  <div ckass="form-group">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", id:"Email_confirmation" %>
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br>
  
  <div class="form-group">
    <div class="field">
      <%= f.label :password %> <br />
      <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password_confirmation %>（英字と数字の両方を含めた６文字以上で設定してください。）<br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control" %>
    </div>
  </div>

  <div class:form-group>
    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" ,class: "form-control"%>
    </div>
  </div>
  <br>
  <div class="actions">
    <button type="submit" class="btn btn-primary">更新する</button>
  </div>
<% end %>
<br>


<%= link_to "戻る", :back %>

<%= render "shared/footer" %>